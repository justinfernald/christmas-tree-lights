{
  "name": "christmas-tree",
  "version": "1.0.0",
  "description": "a christmas tree",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev -w packages/editor",
    "lights": "npm run lights -w packages/animations",
    "docs": "npm run docs -w packages/editor",
    "build-editor": "npm run build-editor -w packages/editor",
    "build-app": "npm run build-app -w packages/editor",
    "build": "npm run build -w packages/editor",
    "serve": "npm run serve -w packages/editor",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier . --list-different --write",
    "type-check": "npm run type-check --workspaces --if-present",
    "lint": "yarn lint:format && yarn lint:fix"
  },
  "author": "Justin Fernald"
}
